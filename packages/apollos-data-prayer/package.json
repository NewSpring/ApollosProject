{
  "name": "apollos-data-prayer",
  "version": "1.0.0",
  "homepage": "https://github.com/NewSpring/apollos-prototype#readme",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "NODE_ENV=production rm -rf ./lib && mkdir -p lib && babel ./src -d ./lib",
    "lint": "eslint ./src --ext .js"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test|tests).{js,jsx,mjs}"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@apollosproject/data-schema": "^1.2.0-beta.7",
    "@apollosproject/server-core": "^1.2.0-beta.7",
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.25",
    "natural": "^0.6.2",
    "sanitize-html": "^1.19.3"
  },
  "peerDependencies": {
    "@apollosproject/config": "*",
    "@apollosproject/rock-apollo-data-source": "*"
  },
  "devDependencies": {
    "@apollosproject/apollo-server-env-mock": "^1.2.0-beta.7",
    "@apollosproject/babel-preset-apollos": "^1.2.0-beta.7",
    "jest": "^23.6.0",
    "jest-fetch-mock": "2.1.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
